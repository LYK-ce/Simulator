{
    "name": "Ubuntu 20.04 Development Environment",
    "image": "ubuntu:20.04",
    
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "installOhMyZsh": true,
            "upgradePackages": true,
            "username": "vscode",
            "userUid": "1000",
            "userGid": "1000"
        },
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "onCreateCommand": [
        "bash", "-c",
        "apt-get update && apt-get install -y build-essential gcc-9 g++-9 python3.8 python3.8-dev python3-pip python3.8-venv gdb valgrind cmake make && ln -sf /usr/bin/gcc-9 /usr/bin/gcc && ln -sf /usr/bin/g++-9 /usr/bin/g++ && ln -sf /usr/bin/python3.8 /usr/bin/python"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "ms-python.python",
                "ms-python.pylint",
                "ms-python.flake8",
                "ms-vscode.cmake-tools",
                "twxs.cmake",
                "ms-vscode.makefile-tools",
                "GitHub.copilot"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/bin/python3.8",
                "C_Cpp.default.cppStandard": "c++17",
                "C_Cpp.default.cStandard": "c11",
                "C_Cpp.default.compilerPath": "/usr/bin/g++-9"
            }
        }
    },
    "forwardPorts": [],
    "postCreateCommand": "gcc --version && g++ --version && python3.8 --version",
    "remoteUser": "root"
}